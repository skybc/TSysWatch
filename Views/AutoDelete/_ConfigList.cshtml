@using TSysWatch
@model List<DiskCleanupConfigDisplay>

@if (Model == null || Model.Count == 0)
{
    <p class="text-muted">暂无配置，请添加新配置</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>驱动器</th>
                    <th>删除目录</th>
                    <th>容量阈值</th>
                    <th>时间阈值</th>
                    <th>逻辑模式</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var config in Model)
                {
                    <tr>
                        <td><strong>@config.DriveLetter</strong></td>
                        <td>
                            <small>
                                @foreach (var dir in config.DeleteDirectories)
                                {
                                    <div>@dir</div>
                                }
                            </small>
                        </td>
                        <td>@config.StartDeleteSizeGB GB - @config.StopDeleteSizeGB GB</td>
                        <td>@config.StartDeleteFileDays 天</td>
                        <td>
                            <span class="badge badge-@(config.LogicMode == "OR" ? "info" : "warning")">
                                @config.LogicMode
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-info" data-drive-letter="@config.DriveLetter" data-action="edit">编辑</button>
                            <button class="btn btn-sm btn-danger" data-drive-letter="@config.DriveLetter" data-action="delete">删除</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
