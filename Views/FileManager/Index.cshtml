@model TSysWatch.Entity.FileManagerViewModel
@{
    ViewData["Title"] = "文件管理器";
}

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<!-- 文件管理器自定义样式 -->
<link href="/css/filemanager.css" rel="stylesheet">

<div class="row mb-4">
    <div class="col">
        <h2 class="mb-3">
            <i class="fas fa-folder-open me-2"></i>文件管理器
        </h2>
        
        @* 驱动器切换 *@
        <div class="row mb-3">
            <div class="col-md-8">
                @* 面包屑导航 *@
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        @if (Model.Breadcrumbs.Any())
                        {
                            @foreach (var crumb in Model.Breadcrumbs)
                            {
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index", new { path = crumb.Path })">
                                        <i class="fas fa-folder me-1"></i>@crumb.Name
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="breadcrumb-item active">根目录</li>
                        }
                    </ol>
                </nav>
            </div>
            <div class="col-md-4">
                @* 驱动器切换下拉菜单 *@
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle w-100" type="button" id="driveSelector" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-hdd me-2"></i>选择驱动器
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end w-100" aria-labelledby="driveSelector">
                        @foreach (var drive in Model.AvailableDrives)
                        {
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", new { path = drive.Name })">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-hdd me-2 text-primary"></i>
                                            <strong>@drive.DisplayName</strong>
                                        </div>
                                        @if (drive.IsReady)
                                        {
                                            <small class="text-muted">@drive.FormattedAvailableSpace 可用</small>
                                        }
                                    </div>
                                    @if (drive.IsReady)
                                    {
                                        <div class="mt-1">
                                            <div class="progress" style="height: 4px;">
                                                <div class="progress-bar" role="progressbar" 
                                                     style="width: @drive.UsagePercentage.ToString("F1")%"
                                                     aria-valuenow="@drive.UsagePercentage.ToString("F1")" 
                                                     aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            <small class="text-muted">@drive.FormattedAvailableSpace / @drive.FormattedTotalSize</small>
                                        </div>
                                    }
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@* 提示消息 *@
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@* 文件上传表单 *@
<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-upload me-2"></i>文件上传
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Upload" method="post" enctype="multipart/form-data" id="uploadForm">
            <input type="hidden" name="path" value="@Model.CurrentPath" />
            <div class="row">
                <div class="col-md-8">
                    <input type="file" name="files" class="form-control" multiple accept=".txt,.jpg,.jpeg,.png,.gif,.pdf,.zip,.rar,.doc,.docx,.xls,.xlsx" />
                    <div class="form-text">
                        支持的文件类型：txt, jpg, jpeg, png, gif, pdf, zip, rar, doc, docx, xls, xlsx（最大50MB）
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-upload me-2"></i>上传文件
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@* 文件列表 *@
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>文件列表
        </h5>
        <span class="badge bg-secondary">@Model.Files.Count 项</span>
    </div>
    <div class="card-body p-0">
        @if (Model.Files.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 50px;"><i class="fas fa-file"></i></th>
                            <th>名称</th>
                            <th style="width: 120px;">大小</th>
                            <th style="width: 150px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* 返回上级目录 *@
                        @if (Model.Breadcrumbs.Count > 1)
                        {
                            var parentPath = Model.Breadcrumbs[^2].Path; // 获取倒数第二个路径
                            <tr>
                                <td>
                                    <i class="fas fa-level-up-alt text-secondary"></i>
                                </td>
                                <td>
                                    <a href="@Url.Action("Index", new { path = parentPath })" class="text-decoration-none">
                                        <strong>.. (返回上级)</strong>
                                    </a>
                                </td>
                                <td>--</td>
                                <td>--</td>
                            </tr>
                        }

                        @foreach (var file in Model.Files)
                        {
                            <tr>
                                <td>
                                    @if (file.IsDirectory)
                                    {
                                        <i class="fas fa-folder text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-file text-primary"></i>
                                    }
                                </td>
                                <td>
                                    @if (file.IsDirectory)
                                    {
                                        <a href="@Url.Action("Index", new { path = file.Path })" class="text-decoration-none">
                                            <strong>@file.Name</strong>
                                        </a>
                                    }
                                    else
                                    {
                                        <span>@file.Name</span>
                                    }
                                </td>
                                <td>@file.FormattedSize</td>
                                <td>
                                    @if (!file.IsDirectory)
                                    {
                                        <a href="@Url.Action("Download", new { filePath = file.Path })" 
                                           class="btn btn-sm btn-outline-success me-1" title="下载">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    }
                                    
                                    @if (Model.CanDelete && !file.IsInSystemDrive)
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-danger delete-btn" 
                                                data-path="@file.Path" 
                                                data-name="@file.Name" 
                                                data-is-directory="@file.IsDirectory.ToString().ToLower()" 
                                                title="删除">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <p class="text-muted">此目录为空</p>
            </div>
        }
    </div>
</div>

@* 删除确认模态框 *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>确认删除
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>您确定要删除以下项目吗？</p>
                <div class="alert alert-warning">
                    <strong id="deleteItemName"></strong>
                </div>
                <p class="text-muted mb-0">此操作无法撤销。</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="fas fa-trash me-2"></i>确认删除
                </button>
            </div>
        </div>
    </div>
</div>

@* 加载提示 *@
<div class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" 
     id="loadingOverlay" style="background: rgba(0,0,0,0.5); z-index: 9999; display: none !important;">
    <div class="text-center text-white">
        <div class="spinner-border mb-3" role="status"></div>
        <div>处理中，请稍候...</div>
    </div>
</div>

@section Scripts {
<script>
$(document).ready(function() {
    let deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    let currentDeletePath = '';

    // 删除按钮点击事件
    $('.delete-btn').click(function() {
        currentDeletePath = $(this).data('path');
        let itemName = $(this).data('name');
        let isDirectory = $(this).data('is-directory');
        
        $('#deleteItemName').text((isDirectory ? '📁 ' : '📄 ') + itemName);
        deleteModal.show();
    });

    // 确认删除
    $('#confirmDeleteBtn').click(function() {
        if (!currentDeletePath) return;
        
        showLoading();
        
        $.ajax({
            url: '@Url.Action("Delete")',
            type: 'POST',
            data: { path: currentDeletePath },
            success: function(response) {
                hideLoading();
                deleteModal.hide();
                
                if (response.success) {
                    showAlert('success', response.message);
                    // 刷新页面
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                } else {
                    showAlert('danger', response.message);
                }
            },
            error: function() {
                hideLoading();
                deleteModal.hide();
                showAlert('danger', '删除操作失败，请重试。');
            }
        });
    });

    // 上传表单提交前显示加载提示
    $('#uploadForm').submit(function() {
        let fileInput = $(this).find('input[type="file"]');
        if (fileInput[0].files.length === 0) {
            showAlert('warning', '请选择要上传的文件。');
            return false;
        }
        showLoading();
        return true;
    });

    function showLoading() {
        $('#loadingOverlay').show();
    }

    function hideLoading() {
        $('#loadingOverlay').hide();
    }

    function showAlert(type, message) {
        let alertHtml = `
            <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'exclamation-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        
        // 移除现有的警告
        $('.alert').remove();
        
        // 添加新警告到页面顶部
        $('h2').after(alertHtml);
        
        // 自动隐藏成功消息
        if (type === 'success') {
            setTimeout(function() {
                $('.alert-success').fadeOut();
            }, 3000);
        }
    }
});
</script>
}
