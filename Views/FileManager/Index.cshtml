@section Scripts {
<script>
$(document).ready(function() {
    let deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    let currentDeletePath = '';

    // åˆ é™¤æŒ‰é’®ç‚¹å‡»äº‹ä»¶
    $('.delete-btn').click(function() {
        currentDeletePath = $(this).data('path');
        let itemName = $(this).data('name');
        let isDirectory = $(this).data('is-directory');
        
        $('#deleteItemName').text((isDirectory ? 'ğŸ“ ' : 'ğŸ“„ ') + itemName);
        deleteModal.show();
    });

    // ç¡®è®¤åˆ é™¤
    $('#confirmDeleteBtn').click(function() {
        if (!currentDeletePath) return;
        
        showLoading();
        
        $.ajax({
            url: '@Url.Action("Delete")',
            type: 'POST',
            data: { path: currentDeletePath },
            success: function(response) {
                hideLoading();
                deleteModal.hide();
                
                if (response.success) {
                    showAlert('success', response.message);
                    // åˆ·æ–°é¡µé¢
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                } else {
                    showAlert('danger', response.message);
                }
            },
            error: function() {
                hideLoading();
                deleteModal.hide();
                showAlert('danger', 'åˆ é™¤æ“ä½œå¤±è´¥ï¼Œè¯·é‡è¯•ã€‚');
            }
        });
    });

    // ä¸Šä¼ è¡¨å•æäº¤å‰æ˜¾ç¤ºåŠ è½½æç¤º
    $('#uploadForm').submit(function() {
        let fileInput = $(this).find('input[type="file"]');
        if (fileInput[0].files.length === 0) {
            showAlert('warning', 'è¯·é€‰æ‹©è¦ä¸Šä¼ çš„æ–‡ä»¶ã€‚');
            return false;
        }
        showLoading();
        return true;
    });

    function showLoading() {
        $('#loadingOverlay').show();
    }

    function hideLoading() {
        $('#loadingOverlay').hide();
    }

    function showAlert(type, message) {
        let alertHtml = `
            <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'exclamation-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        
        // ç§»é™¤ç°æœ‰çš„è­¦å‘Š
        $('.alert').remove();
        
        // æ·»åŠ æ–°è­¦å‘Šåˆ°é¡µé¢é¡¶éƒ¨
        $('h2').after(alertHtml);
        
        // è‡ªåŠ¨éšè—æˆåŠŸæ¶ˆæ¯
        if (type === 'success') {
            setTimeout(function() {
                $('.alert-success').fadeOut();
            }, 3000);
        }
    }
});
</script>
