@{
    // 参数: ModuleName (如 DeleteRecords), DisplayName (如 "删除记录"), ApiPrefix (如 "AutoDelete")
    string moduleName = ViewBag.ModuleName ?? "Records";
    string displayName = ViewBag.DisplayName ?? "历史记录";
    string apiPrefix = ViewBag.ApiPrefix ?? "Module";
}

<!-- 下载@displayName 模态框 -->
<div class="modal fade" id="@(moduleName)DownloadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">下载@displayName</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">开始日期</label>
                        <input type="date" class="form-control" id="@(moduleName)StartDate">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">结束日期</label>
                        <input type="date" class="form-control" id="@(moduleName)EndDate">
                    </div>
                </div>
                <button type="button" class="btn btn-primary mt-3" id="@(moduleName)SearchBtn">查询文件</button>
                <div id="@(moduleName)FilesList" class="mt-3" style="display:none;">
                    <h6>找到的文件：</h6>
                    <div id="@(moduleName)FilesTable"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" id="@(moduleName)ExportBtn">下载</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function() {
        initializeDownloadRecords('@moduleName', '@apiPrefix');
    });
</script>
